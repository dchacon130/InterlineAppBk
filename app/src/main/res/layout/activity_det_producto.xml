    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="2sp"
        android:layout_marginBottom="2sp"/>

    <!-- Datos del producto-->
    <TextView
        android:id="@+id/txtInfo5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtInfo6"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_marginTop="10sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtCodProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtCodProducto"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/idCodProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/idCodProducto"
            android:textColor="#5d5d5d"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtNombreProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtNombreProducto"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/idNombreProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/idNombreProducto"
            android:textColor="#5d5d5d"
            android:textStyle="bold"
            android:layout_marginLeft="14dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtLoteProd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtLoteProd"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/idLoteProd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/idLoteProd"
            android:textColor="#5d5d5d"
            android:textStyle="bold"
            android:layout_marginLeft="39dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtFechaVenc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtFechaVenc"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/idFechaVenc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/idFechaVenc"
            android:textColor="#5d5d5d"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="2sp"
        android:layout_marginBottom="2sp"/>

    <!-- Cantidad y observacion-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtCantidadDev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/txtCantidadDev"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/idCantidadDev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/hintCantidadDev"
            android:textColor="#5d5d5d"
            android:textStyle="bold"
            android:imeOptions="actionNext"
            android:inputType="phone"/>

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hintObservacion"
        android:id="@+id/idObservacion"
        android:maxLength="255"
        android:layout_marginTop="5sp"
        android:imeOptions="actionSend"
        android:inputType="text"/>


    <Button
        android:id="@+id/btnAdicionar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnAdicionar"
        android:layout_marginTop="0dp"/>
    <Button
        android:id="@+id/btnFinalizarDev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnAsignarPrecinto"
        android:layout_marginTop="0dp"/>

</LinearLayout>

