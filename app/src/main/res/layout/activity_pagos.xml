<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PagosActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtCod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtCod"
                android:textSize="16dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="3dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txtCodEje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtCodEje"
                android:textSize="16dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="3dp"
                android:textColor="#5d5d5d"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtNomEje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtNomEje"
                android:textSize="16dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="20dp"
                android:textColor="#5d5d5d"
                android:textStyle="bold"/>


        </LinearLayout>

        <TextView
            android:id="@+id/txtselectCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtselectCliente"
            android:textSize="18dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>



        <ListView
            android:layout_width="match_parent"
            android:layout_height="465dp"
            android:layout_marginTop="0dp"
            android:id="@android:id/list"></ListView>


    </LinearLayout >

</ScrollView>