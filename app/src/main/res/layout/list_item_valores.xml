<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">
    <!--DOCUMENTO-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">
        <CheckBox android:id="@+id/ChkMarcame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:checked="false" />
        <TextView
            android:id="@+id/txtDocumento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtDocumento"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/iddocumento"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dip"
            android:paddingTop="0dip"
            android:textColor="#5d5d5d"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/txtPesos"/>
    </LinearLayout>
    <!--REFERENCIA FACTURA-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/txtReferenciaFactura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtReferenciaFactura"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_marginRight="35dp"/>
        <TextView
            android:id="@+id/idreferencia_factura"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dip"
            android:textColor="#5d5d5d"
            android:textStyle="bold"
            android:text="@string/txtPesos"/>
    </LinearLayout>
    <!--FECHA DOCUMENTO-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/txtFechaDocumento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtFechaDocumento"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/idfecha_documento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5d5d5d"
            android:textStyle="bold"
            android:text="@string/txtPesos"
            android:layout_marginRight="25dp"/>
    <!--FECHA VENCIMIENTO-->
        <TextView
            android:id="@+id/txtFechaVencimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtFechaVencimiento"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/idfecha_vc_mto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5d5d5d"
            android:textStyle="bold"
            android:text="@string/txtPesos"/>
    </LinearLayout>
    <!--SALDO-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtSaldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtSaldo"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"/>
        <!-- $$$ -->
        <TextView
            android:id="@+id/txtPesos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtSignoPesos"
            android:textColor="#5d5d5d"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"/>
        <TextView
            android:id="@+id/idsaldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5d5d5d"
            android:textStyle="bold"
            android:text="@string/txtPesos"/>
    </LinearLayout>
</LinearLayout>